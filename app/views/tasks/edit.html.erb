<% provide(:title, "Editar") %>
<h1>Alterar tarefa</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@task) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= render 'fields', f: f %>
      <%= f.submit "Editar", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>